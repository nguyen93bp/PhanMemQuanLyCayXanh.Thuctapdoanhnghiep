@model QuanLyCayXanh.Models.User

@{
    ViewBag.Title = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin chi tiết người dùng</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                ID người dùng:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IDuser)
            </dd>

            <dt class="col-sm-3">
                Tài khoản:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Account)
            </dd>

            <dt class="col-sm-3">
                Mật khẩu:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Password)
            </dd>

            <dt class="col-sm-3">
                Tên:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                Email:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3">
                Số điện thoại:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phonenumber)
            </dd>

            <dt class="col-sm-3">
                Địa chỉ:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt class="col-sm-3">
                Vai trò:
            </dt>
            <dd class="col-sm-9">
                @if (Model.Role == 4)
                {
                    @:Quản lý mua phân bón
                }
                else if (Model.Role == 0)
                {
                    @:Admin
                }
                else if (Model.Role == 1)
                {
                    @:Quản lý cây xanh
                }
                else if (Model.Role == 2)
                {
                    @:Quản lý mua cây xanh
                }
                else if (Model.Role == 3)
                {
                    @:Quản lý phân bón
                }
                else if (Model.Role == 5)
                {
                    @:Quản lý cây xanh và mua
                }
                else if (Model.Role == 6)
                {
                    @:Quản lý phân bón và mua
                }
                else
                {
                    @Html.DisplayFor(model => model.Role)
                }
            </dd>
        </dl>
    </div>
</div>

<p class="mt-3">
    @Html.ActionLink("Sửa", "Edit", new { id = Model.IDuser }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-outline-dark font-weight-bold ml-2" })
</p>
