@model IEnumerable<QuanLyCayXanh.Models.User>

@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
              
                <th>
                    Tài khoản
                </th>
                <th>
                    Mật khẩu
                </th>
                <th>
                    Tên
                </th>
                <th>
                    Email
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Vai trò
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
              
                    <td>
                        @Html.DisplayFor(modelItem => item.Account)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phonenumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @if (item.Role == 4)
                        {
                            @:Quản lý mua phân bón
                        }
                        else if (item.Role == 0)
                        {
                            @:Admin
                        }
                        else if (item.Role == 1)
                        {
                            @:Quản lý cây xanh
                        }
                        else if (item.Role == 2)
                        {
                            @:Quản lý mua cây xanh
                        }
                        else if (item.Role == 3)
                        {
                            @:Quản lý phân bón
                        }
                        else if (item.Role == 5)
                        {
                            @:Quản lý cây xanh và mua
                        }
                        else if (item.Role == 6)
                        {
                            @:Quản lý phân bón và mua
                        }
                        else

                        {
                            @Html.DisplayFor(modelItem => item.Role)
                        }


                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDuser }, new { @class = "btn btn-outline-primary btn-sm mr-1" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDuser }, new { @class = "btn btn-outline-info btn-sm mr-1" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDuser }, new { @class = "btn btn-outline-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
