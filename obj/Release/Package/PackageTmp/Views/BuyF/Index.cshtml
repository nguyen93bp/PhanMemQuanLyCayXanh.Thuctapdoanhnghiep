@model IEnumerable<QuanLyCayXanh.Models.BuyF>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Thống kê", "ExportToPdf", null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
           
                <th>
                    Tên Phân Bón
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Nhà cung cấp
                </th>
                <th>
                    Ngày
                </th>
                <th>
                    Giá tiền
                </th>

               


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fertilizer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Provider)
                    </td>

                    <td>
                        @*@Html.DisplayFor(modelItem => item.Date)*@
                        @* @item.Date.ToString("yyyy")*@
                        @item.Date.ToString("dd/MM/yyyy")

                    </td>
                    <td>
                        @(item.Price.ToString("N0") + " ₫")
                    </td>

                    

                    <td width="180">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.BuyFID }, new { @class = "btn btn-outline-primary btn-sm mr-1" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.BuyFID }, new { @class = "btn btn-outline-info btn-sm mr-1" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.BuyFID }, new { @class = "btn btn-outline-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
