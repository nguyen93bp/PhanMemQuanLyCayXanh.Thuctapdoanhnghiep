@model QuanLyCayXanh.Models.Fertilizer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}   
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Xóa Phân Bón </h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Tên phân bón:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                Loại phân bón:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Type)
            </dd>

            <dt class="col-sm-3">
                Số Lượng phân:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-3">
                Vị trí:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Location)
            </dd>
            @* <dt class="col-sm-3">
                Ảnh minh họa:
            </dt>
            <dd class="col-sm-9">
                <img src="~/Images/@Model.Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
            </dd>*@
            <dt class="col-sm-3">
                Tên cây xanh:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nametree)
            </dd>

            <dt class="col-sm-3">
                Số lần tưới nước:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Water)
            </dd>
            <dt class="col-sm-3">
                Số lần bón phân định kỳ:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Fertilization)
            </dd>
            <dt class="col-sm-3">
                Số lượng bỏ phân :
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Applyingfertilizer)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-3">
                <input type="submit" value="Xóa" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa cây xanh này không?');" /> |
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
            </div>

        }
    </div>
</div>
