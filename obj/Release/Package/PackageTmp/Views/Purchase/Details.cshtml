@model QuanLyCayXanh.Models.Buy

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin chi tiết mua cây xanh</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Mã cây xanh:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GreeneryID)
            </dd>

            <dt class="col-sm-3">
                Nhà cung cấp:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Provider)
            </dd>

            <dt class="col-sm-3">
                Số lượng:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt class="col-sm-3">
                Ngày mua:
            </dt>
            <dd class="col-sm-9">
                @Model.Date.ToString("dd/MM/yyyy")
            </dd>

            <dt class="col-sm-3">
                Giá:
            </dt>
            <dd class="col-sm-9">
                @(Model.Price.ToString("N0") + " ₫")
            </dd>

            <dt class="col-sm-3">
                Ảnh minh họa:
            </dt>
            <dd class="col-sm-9">
                <img src="~/Images/@Model.Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
            </dd>
        </dl>   
    </div>
</div>
<div class="mt-3">
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.BuyID }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-outline-dark" })
</div>
