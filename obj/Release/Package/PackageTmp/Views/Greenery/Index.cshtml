@model IEnumerable<QuanLyCayXanh.Models.Greenery>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Thông kê", "ExportToPdf", null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Tên cây</th>
                <th>Loại cây</th>
                <th>Tuổi</th>
                <th>Sức khỏe</th>
                <th>Vị trí</th>
                <th>Hình ảnh</th>
                <th>Ngày trồng</th>
                <th>Số lượng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Age)</td>
                    <td>@Html.DisplayFor(modelItem => item.Health)</td>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td><img src="~/Images/@item.Image" alt="Hình ảnh" width="50" height="50" /></td>
                    <td>@item.Createdate.ToString("dd-MM-yyyy")</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.GreeneryID }, new { @class = "btn btn-outline-primary btn-sm mr-1" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.GreeneryID }, new { @class = "btn btn-outline-info btn-sm mr-1" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.GreeneryID }, new { @class = "btn btn-outline-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
