@model QuanLyCayXanh.Models.Greenery

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin chi tiết cây xanh</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Tên cây:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                Loại cây:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Type)
            </dd>

            <dt class="col-sm-3">
                Tuổi:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Age)
            </dd>

            <dt class="col-sm-3">
                Tình trạng sức khỏe:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Health)
            </dd>

            <dt class="col-sm-3">
                Vị trí:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Location)
            </dd>

            <dt class="col-sm-3">
                Ngày tạo:
            </dt>
            <dd class="col-sm-9">
                @Model.Createdate.ToString("dd/MM/yyyy")
            </dd>

            <dt class="col-sm-3">
                Số lượng:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt class="col-sm-3">
                Ảnh minh họa:
            </dt>
            <dd class="col-sm-9">
                <img src="~/Images/@Model.Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.GreeneryID }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-outline-dark" })
</div>
